{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}]
  },
  "ecmaFeatures": {
    "templateStrings": true
  },
  "extends": "eslint:recommended"
}
